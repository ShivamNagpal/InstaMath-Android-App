<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nagpal.shivam.instamath">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="InnerclassSeparator">
        <activity
            android:name=".Activity.FlashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.BasicCalculatorActivity"
            android:label="@string/basic_calculator" />
        <activity
            android:name=".Activity.ScientificCalculatorActivity"
            android:label="@string/scientific_calculator" />
        <activity
            android:name=".Activity.InterestActivity"
            android:label="@string/interest" />
        <activity
            android:name=".Activity.InterpolationActivity"
            android:label="@string/interpolation" />
        <activity
            android:name=".Activity.PreferencesActivity"
            android:label="@string/preferences" />
        <activity
            android:name=".Activity.NumberConversionActivity"
            android:label="@string/number_conversion" />
    </application>

</manifest>